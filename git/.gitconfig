[core]
    autocrlf = input
    editor = nvim
	excludesfile = /Users/viktorstrate/.global-gitignore
[commit]
    gpgsign = false
	template = /Users/viktorstrate/.stCommitMsg
[web]
    browser = firefox
[color]
    ui = auto
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[alias]
    a = add -A
    b = branch
    c = commit
    ca = commit -a
    cm = commit -m
    cam = commit -am
    d = diff
    f = fetch
    m = merge
    s = status
    l = log --graph --decorate
    remember = config --global credential.helper cache
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Users/viktorstrate/Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
